{
    "cmake.sourceDirectory": "${workspaceFolder}/.",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "iwyu.exe": "/usr/bin/iwyu",
    "iwyu.compile_commands": "${workspaceFolder}/build/compile_commands.json",
    "clang-tidy.compilerArgs": [
        "-std=c++11"
    ],
    "clang-tidy.buildPath": "build/", // needs to find the compile_commands.json
    "clang-tidy.executable": "clang-tidy",
    "testExplorer.codeLens": true,
    "markdown.extension.toc.slugifyMode": "github",
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": "explicit"
    },
    "coverage-gutters.coverageFileNames": [
        "lcov.info"
    ],
    "liveServer.settings.port": 5600,
    "cmake.parallelJobs": 0,
    "files.associations": {
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "map": "cpp",
        "set": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "fstream": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "typeinfo": "cpp",
        "any": "cpp",
        "chrono": "cpp",
        "condition_variable": "cpp",
        "ratio": "cpp",
        "mutex": "cpp",
        "thread": "cpp",
        "variant": "cpp",
        "csignal": "cpp",
        "cstring": "cpp"
    } // use number of cores for make -j
}